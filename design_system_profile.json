{
  "designSystemProfile": {
    "name": "Gaming DeFi Interface Design System",
    "version": "1.0",
    "category": "Gaming/DeFi/Dashboard",
    
    "colorPalette": {
      "primary": {
        "background": "#2a1810",
        "backgroundSecondary": "#3d2518",
        "accent": "#ff6b35",
        "accentSecondary": "#ffa726"
      },
      "semantic": {
        "success": "#4caf50",
        "warning": "#ff9800",
        "danger": "#f44336",
        "info": "#2196f3"
      },
      "neutral": {
        "text": "#ffffff",
        "textSecondary": "#cccccc",
        "textMuted": "#999999",
        "border": "#444444",
        "surface": "#1e1e1e"
      },
      "gradients": {
        "primary": "linear-gradient(135deg, #ff6b35 0%, #ffa726 100%)",
        "background": "linear-gradient(180deg, #2a1810 0%, #1a0f08 100%)",
        "card": "linear-gradient(145deg, #3d2518 0%, #2a1810 100%)"
      }
    },

    "typography": {
      "fontFamilies": {
        "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
        "display": "Inter, system-ui, sans-serif"
      },
      "fontWeights": {
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "black": 900
      },
      "fontSizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem"
      }
    },

    "spacing": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem"
    },

    "borderRadius": {
      "none": "0",
      "sm": "0.125rem",
      "base": "0.375rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "xl": "1rem",
      "full": "9999px"
    },

    "shadows": {
      "sm": "0 1px 3px rgba(0, 0, 0, 0.3)",
      "base": "0 4px 6px rgba(0, 0, 0, 0.4)",
      "lg": "0 10px 15px rgba(0, 0, 0, 0.5)",
      "xl": "0 20px 25px rgba(0, 0, 0, 0.6)",
      "glow": "0 0 20px rgba(255, 107, 53, 0.3)"
    },

    "components": {
      "buttons": {
        "primary": {
          "background": "linear-gradient(135deg, #ff6b35 0%, #ffa726 100%)",
          "color": "#ffffff",
          "fontWeight": 600,
          "borderRadius": "md",
          "padding": "0.75rem 1.5rem",
          "fontSize": "base",
          "boxShadow": "glow",
          "hoverEffect": "brightness(110%) scale(1.02)",
          "transition": "all 0.2s ease"
        },
        "secondary": {
          "background": "transparent",
          "border": "2px solid #ff6b35",
          "color": "#ff6b35",
          "fontWeight": 500,
          "borderRadius": "md",
          "padding": "0.75rem 1.5rem",
          "hoverEffect": "background: rgba(255, 107, 53, 0.1)"
        }
      },

      "cards": {
        "primary": {
          "background": "linear-gradient(145deg, #3d2518 0%, #2a1810 100%)",
          "borderRadius": "lg",
          "padding": "xl",
          "boxShadow": "lg",
          "border": "1px solid rgba(255, 107, 53, 0.2)"
        },
        "secondary": {
          "background": "rgba(255, 255, 255, 0.05)",
          "borderRadius": "md",
          "padding": "lg",
          "backdropFilter": "blur(10px)",
          "border": "1px solid rgba(255, 255, 255, 0.1)"
        }
      },

      "indicators": {
        "circular": {
          "size": "60px",
          "borderWidth": "4px",
          "borderStyle": "solid",
          "borderRadius": "full",
          "position": "relative",
          "background": "transparent"
        },
        "progressBar": {
          "height": "8px",
          "borderRadius": "full",
          "background": "rgba(255, 255, 255, 0.1)",
          "fill": "linear-gradient(90deg, #4caf50 0%, #81c784 100%)"
        }
      },

      "iconButtons": {
        "base": {
          "width": "48px",
          "height": "48px",
          "borderRadius": "lg",
          "background": "rgba(255, 255, 255, 0.1)",
          "border": "1px solid rgba(255, 255, 255, 0.2)",
          "backdropFilter": "blur(10px)",
          "hoverEffect": "background: rgba(255, 255, 255, 0.2)"
        }
      }
    },

    "layouts": {
      "dashboard": {
        "structure": "sidebar + main content",
        "sidebar": {
          "width": "280px",
          "background": "linear-gradient(180deg, #2a1810 0%, #1a0f08 100%)",
          "padding": "xl",
          "position": "fixed"
        },
        "mainContent": {
          "marginLeft": "280px",
          "padding": "xl",
          "background": "linear-gradient(180deg, #2a1810 0%, #1a0f08 100%)"
        }
      },
      "grid": {
        "gap": "lg",
        "columns": "repeat(auto-fit, minmax(300px, 1fr))",
        "responsiveBreakpoints": {
          "mobile": "768px",
          "tablet": "1024px",
          "desktop": "1280px"
        }
      }
    },

    "animations": {
      "transitions": {
        "fast": "0.15s ease",
        "base": "0.2s ease",
        "slow": "0.3s ease"
      },
      "effects": {
        "hover": "transform: scale(1.02); filter: brightness(110%)",
        "focus": "box-shadow: 0 0 0 3px rgba(255, 107, 53, 0.3)",
        "loading": "animation: pulse 2s infinite"
      }
    },

    "designPrinciples": {
      "visualStyle": "Dark gaming aesthetic with warm orange accents",
      "interaction": "Subtle hover effects with scale and brightness changes",
      "feedback": "Clear visual states for different data conditions",
      "accessibility": "High contrast ratios, readable typography",
      "responsiveness": "Mobile-first approach with flexible grids"
    },

    "usageGuidelines": {
      "primaryColors": "Use orange gradient for CTAs and important elements",
      "backgrounds": "Layer dark gradients for depth",
      "cards": "Apply subtle borders and shadows for elevation",
      "typography": "Maintain hierarchy with font weights and sizes",
      "spacing": "Use consistent spacing scale for visual rhythm",
      "interactivity": "Apply consistent hover and focus states"
    },

    "componentPatterns": {
      "dataVisualization": {
        "charts": "Dark background with colored data lines/bars",
        "progressIndicators": "Circular or linear with gradient fills",
        "statusIndicators": "Color-coded with clear visual hierarchy"
      },
      "navigation": {
        "sidebar": "Fixed position with grouped menu items",
        "breadcrumbs": "Subtle text with separators",
        "tabs": "Underline or background highlight active state"
      },
      "forms": {
        "inputs": "Dark background with orange focus states",
        "labels": "Clear hierarchy with proper spacing",
        "validation": "Color-coded feedback messages"
      }
    }
  }
}